<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/buttons_background_layout">
    <Button android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="برنامه ریزی"
            android:id="@+id/buttons_barnameRiziButton"
            android:layout_centerHorizontal="true"
            android:onClick="buttons_BarnameRiziClickHandler"
            android:layout_marginTop="50dp"
            />
    <ExpandableListView
            android:id="@+id/buttons_explv"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:layout_below="@id/buttons_barnameRiziButton"
            />
   </RelativeLayout>