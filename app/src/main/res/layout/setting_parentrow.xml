<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#d1181818">
    <Button android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:drawable/ic_menu_delete"
            android:id="@+id/setting_removegroup"
            android:layout_alignParentLeft="true"
            android:focusable="false"
            android:layout_marginLeft="10dp"
            />
    <TextView
            android:id="@+id/setting_groupname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="?android:attr/expandableListPreferredItemPaddingLeft"
            android:textSize="23dp"
            android:textColor="#ffffffff"
            android:layout_alignParentRight="true"/>
    <!--<CheckBox android:layout_width="wrap_content"-->
              <!--android:layout_height="wrap_content"-->
              <!--android:layout_alignParentRight="true"-->
              <!--android:focusable="false"-->
              <!--android:id="@+id/setting_checkbox"/>-->
    <Button android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/setting_removegroup"
            android:id="@+id/setting_addgroup"
            android:background="@android:drawable/ic_input_add"
            android:focusable="false"/>
</RelativeLayout>