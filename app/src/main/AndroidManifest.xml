<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="main"
    >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="IOT">
        <activity android:name="main.MainFormActivity"
            android:label="IOT"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="main.Connect"></activity>
        <activity android:name="main.ListActivity"></activity>
        <activity android:name="main.SettingActivity"></activity>
        <activity android:name="main.ScheduleActivity"></activity>
        <activity android:name="main.AddKeyActivity"></activity>
        <activity android:name="main.AddDeviceActivity"></activity>
    </application>
</manifest>
